# deployment/RAG_Dockerfile
# Container for serving RAG model on Vertex AI

FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements files
COPY ModelDevelopment/RAG/requirements.txt /app/requirements-base.txt
COPY deployment/requirements-extra.txt /app/requirements-extra.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-base.txt
RUN pip install --no-cache-dir -r requirements-extra.txt

# Copy your RAG code structure
COPY ModelDevelopment/RAG/ /app/rag/
COPY ModelDevelopment/common/ /app/common/

# Copy serving application
COPY deployment/serve.py /app/

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=8080
ENV GCS_BUCKET=medscan-pipeline-medscanai-476500
ENV PYTHONPATH=/app:/app/rag

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run server
CMD ["python", "RAG_serve.py"]